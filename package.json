{
  "name": "murmy2024",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run watch:server\" \"vite --host\" \"npm run serve\"",
    "serve": "NODE_ENV=development nodemon dist/server/index.cjs --watch dist/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vue-tsc && vite build --mode=production",
    "build:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/server/index.cjs --target=node20 --external:express --external:express-ws --external:ws",
    "watch:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/server/index.cjs --target=node20 --external:express --external:express-ws --external:ws --watch",
    "start": "PORT=443 node dist/server/index.cjs"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@pictogrammers/memory": "^1.5.0",
    "@pictogrammers/memory-svg": "^1.5.0",
    "@vueuse/core": "^10.9.0",
    "@vueuse/gesture": "^2.0.0",
    "color": "^4.2.3",
    "moment": "^2.30.1",
    "pinia": "^2.1.7",
    "ua-parser-js": "^1.0.37",
    "vue": "^3.4.21",
    "vue-router": "^4.3.2",
    "vuetify": "^3.6.7"
  },
  "devDependencies": {
    "@types/color": "^3.0.6",
    "@types/express-ws": "^3.0.4",
    "@types/node": "^20.12.12",
    "@types/node-persist": "^3.1.8",
    "@types/ua-parser-js": "^0.7.39",
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.3",
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "json5": "^2.2.3",
    "node-persist": "^4.0.1",
    "nodemon": "^3.1.0",
    "sass": "^1.77.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-mkcert": "^1.17.5",
    "vite-plugin-pwa": "^0.20.0",
    "vite-plugin-vuetify": "^2.0.3",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.0.6"
  }
}
